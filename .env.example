# Raydium Perps Scalping Bot Configuration

# RPC endpoint for Solana
RPC_URL=https://api.mainnet-beta.solana.com

# Trading mode: quote (simulated), paper (simulated), or live (real trading)
MODE=quote

# Live trading safety flag (REQUIRED for MODE=live)
# Set to 1 to enable live trading (with real money)
# LIVE_TRADING=1

# Market to trade
MARKET=BTC-PERP

# Max leverage (hard cap: 50x)
MAX_LEVERAGE=50

# Strategy parameters
MARGIN_PCT=2
TP_BPS=10
SL_BPS=10
FEE_BPS=2.5

# EMA indicator settings
EMA_FAST=9
EMA_SLOW=21
TF_SECONDS=15
PRICE_SOURCE=index

# Cooldown settings (ms)
COOLDOWN_MS_PAPER=200
COOLDOWN_MS_LIVE=2000

# Kill switch settings
MAX_DAILY_LOSS_PCT=1.0
MAX_CONSEC_LOSSES=10
MAX_TRADES_PER_HOUR=120
MAX_CONSEC_ERRORS=20

